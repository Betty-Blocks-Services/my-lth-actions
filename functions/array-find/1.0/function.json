{
  "description": "Filter an array of strings, number or objects based on a condition. Returns 1 item that matches the criteria",
  "label": "Array Find",
  "category": "Array",
  "icon": {
    "name": "ListIncredementIcon",
    "color": "Blue"
  },
  "options": [
    {
      "name": "array",
      "label": "Array",
      "meta": {
        "type": "Value",
        "allowedKinds": ["ARRAY", "COLLECTION"],
        "validations": {
          "required": true
        }
      },
      "info": "The array to filter"
    },
    {
      "name": "path",
      "label": "Path",
      "meta": {
        "type": "Text",
        "validations": {
          "required": true
        }
      },
      "info": "If the array is an array of objects, provide the path to the property to filter on. Separate nested properties with a dot. For example, 'user.name'"
    },
    {
      "name": "value",
      "label": "Value",
      "meta": {
        "type": "Value",
        "allowedKinds": ["STRING", "INTEGER"],
        "validations": {
          "required": true
        }
      },
      "info": "The condition to filter on. For example, 'value > 10'"
    },
    {
      "name": "operator",
      "label": "Operator",
      "meta": {
        "type": "Select",
        "values": [
          {
            "label": "Equal",
            "value": "eq"
          },
          {
            "label": "Not Equal",
            "value": "ne"
          },
          {
            "label": "Greater Than",
            "value": "gt"
          },
          {
            "label": "Greater Than or Equal",
            "value": "gte"
          },
          {
            "label": "Less Than",
            "value": "lt"
          },
          {
            "label": "Less Than or Equal",
            "value": "lte"
          },
          {
            "label": "Contains",
            "value": "cont"
          },
          {
            "label": "Does Not Contain",
            "value": "nCont"
          }
        ]
      }
    },
    {
      "name": "schemaModel",
      "label": "Schema Model",
      "meta": {
        "type": "SchemaModel"
      },
      "info": "The schema model to use for the output array"
    },
    {
      "name": "result",
      "label": "Result",
      "meta": {
        "type": "Output",
        "output": {
          "anyOf": [
            { "type": "Object", "schemaModel": "schemaModel" },
            {
              "type": "Array",
              "dataType": "SCHEMA",
              "schemaModel": "schemaModel"
            },
            { "type": "Text" },
            { "type": "Boolean" },
            { "type": "Number" }
          ]
        }
      }
    }
  ],
  "yields": "NONE"
}
